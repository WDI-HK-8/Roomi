app.controller('StaticPagesCtrl', ['$scope', '$http', '$auth', '$location', function($scope, $http, $auth, $location){
  $scope.message = "Roomi landing page";

  $scope.loginForm = {};

  // check if user is logged in
  $scope.authResponse = $auth.validateUser()
  console.log($scope.authResponse)
  $scope.authStatus = $scope.authResponse.$$state.status
  $scope.loginName = $scope.authResponse.$$state.value.first_name
  
  if ($scope.authStatus == 2) {
    $scope.loggedIn = false;  
    console.log($scope.loggedIn);
    console.log($scope.authStatus)
  } else {
    $scope.loggedIn = true;
    console.log($scope.loggedIn);
    console.log($scope.authStatus)
  }
  
  // Login
  $scope.login = function(){
    $auth.submitLogin($scope.loginForm).
      then(function(response){
        //handle success
        console.log(response);
        $scope.loggedIn = true;
      }).catch(function(response){
        //handle errors
        console.log(response);
      });
  };
  
  // Logout
  $scope.logout = function(){
    $auth.signOut().
      then(function(response){
        //handle success
        console.log(response);
        alert("You have signed out");
        $scope.loggedIn = false;
        UserServices.user = null
      }).
      catch(function(response){
        //handle error
        console.log(response.data.errors);
      });
  };
}]);
