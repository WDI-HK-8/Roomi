app.controller('MyProfileCtrl', ['$scope', '$http', '$auth', '$location', function($scope, $http, $auth, $location){
    
  $scope.authResponse = $auth.validateUser()
  var userLoggedIn = $scope.authResponse.$$state.value
  
  $scope.first_name = userLoggedIn.first_name;
  $scope.last_name = userLoggedIn.last_name;
  $scope.email = userLoggedIn.email;
  $scope.phone = userLoggedIn.phone;
  $scope.age = userLoggedIn.age;
  $scope.occupation = userLoggedIn.occupation;
  $scope.gender = userLoggedIn.gender;
  
  $scope.is_smoker = userLoggedIn.is_smoker ? "Yes" : "No";
  $scope.have_kids = userLoggedIn.have_kids ? "Yes" : "No";
  $scope.have_pet = userLoggedIn.have_pet ? "Yes" : "No";
  
  $scope.description = userLoggedIn.description;

}]);






